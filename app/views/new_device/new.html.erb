<body class="layout-default">
	<section class="hero is-fullheight is-medium is-primary is-bold">
		<div class="hero-body">
			<div class="container">
				<div class="columns is-centered">
					<article class="card is-rounded">
						<div class="card-content">
						<p class="control has-icon"><%= flash[:notice] %></p>
						<p class="control has-icon">登録したいIoTデバイスに書かれているトークンを入力してください。</p>
						<%= form_for(@device, :url => {:action => :create}) do |f| %>
							<p class="control has-icon">
								<%= f.text_field :token, :class=>"input" %>
								<i class="fa fa-lock"></i>
							</p>
							<p><br></p>
							<p class="control">
								<%= f.submit "登録", :class=>"button is-primary is-medium is-fullwidth" %>
							</p>
						<% end %>
						</div>
					</article>
				</div>
			</div>
		</div>
	</section>
</body>
